{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*", "app/*"],
    },
    "resolveJsonModule": true,
    "jsx": "react-jsx"
  },
  "include": ["src", "app", "types"],
  "exclude": ["node_modules"]
}